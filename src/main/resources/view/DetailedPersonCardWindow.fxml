<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>

<?import javafx.scene.control.TextArea?>
<fx:root type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene stylesheets="@DetailedPersonCard.css">
            <VBox spacing = "10" VBox.vgrow = "ALWAYS" styleClass="vbox" prefHeight="600" prefWidth="600">
                <children>
                    <TextArea fx:id="detailedPerson" editable="false" styleClass="text-area" prefWidth="500" prefHeight="500" wrapText="true"/>
                </children>
            </VBox>
        </Scene>
    </scene>
</fx:root>
