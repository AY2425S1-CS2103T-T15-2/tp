<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>

<fx:root type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene stylesheets="@DetailedPersonCard.css">
            <VBox spacing = "10" VBox.vgrow = "ALWAYS" styleClass="vbox">
                <children>
                    <Label fx:id="name" text="Name" styleClass="label"/>
                    <Label fx:id="phone" text="Phone" styleClass="label"/>
                    <Label fx:id="address" text="Address" styleClass="label"/>
                    <Label fx:id="email" text="Email" styleClass="label"/>
                    <Label fx:id="fees" text="Fees" styleClass="label"/>
                    <Label fx:id="classId" text="Class ID" styleClass="label"/>
                    <Label fx:id="monthsPaid" text="Months Paid" styleClass="label"/>
                </children>
            </VBox>
        </Scene>
    </scene>
</fx:root>
